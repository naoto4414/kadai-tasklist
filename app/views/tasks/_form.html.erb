<div class="container">
      <div class="row">
  <div class="col-sm-8">col-sm-8</div>
     <div class="col-sm-offset-2 col-sm-8">col-sm-8</div>
       <div class="col-md-8">col-md-8</div>
         <div class="col-md-offset-2 col-md-">col-md-8</div>
       <div class="col-lg-6">col-lg-6</div>
     <div class="col-lg-offset-3 col-lg-6">col-lg-6</div>
  </div>
</div>
    <%= form_for(task) do |f| %>
     <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
         <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content , class: 'form-control'%>
  </div>
  
  <div class="form-group">
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status , class: 'form-control' %>
  </div>

  <%= f.submit '投稿',class: "btn btn-primary"%>
  
<% end %>


